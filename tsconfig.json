{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    // aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@c/*": ["config/*"]
    }

    // "types": ["types/global"]
  },
  "include": ["src", "config", "@types/global.d.ts", "types/index.d.ts"]
}
